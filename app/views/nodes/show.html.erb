<div id="content">
  <b class="r5"></b><b class="r3"></b><b class="r2"></b>
  <b class="r1"></b><b class="r1"></b>

  <div class="node editor" id="<%= @node.id %>">
    <% for key in @node.vkeys %>
        <div class="key-container line draggable" key="<%= key %>">
          <div class="key">
            <%= key %>
          </div>
          <% unless @node[key].blank? %>
              <% index = 0 %>
              <% for value in @node.vs(key) %>
                  <div class="value draggable" index="<%= index %>">
                    <%= value %>
                  </div>
                  <% index += 1 %>
              <% end %>
          <% end %>
        </div>
    <% end %>
  </div>
  <b class="r1"></b><b class="r1"></b>
  <b class="r2"></b><b class="r3"></b><b class="r5"></b>
</div>
<hr/>
<%= link_to "New", :action => 'new' %> | <%= link_to "Clone", :action => 'new', :id => @node %>
<hr/>
<%= link_to "Nodes", :action => 'index' %>

