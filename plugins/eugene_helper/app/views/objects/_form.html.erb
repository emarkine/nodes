<% o = form %>
<% form_for o, :html =>{:class => @model, :multipart => true} do |f| %>
    <%= f.error_messages %>
    <% for a in attrs %>
        <% if a.type == :hidden %>
            <%= form_field f, a %>
        <% else %>
            <p>
             <%= f.label a.label if a.type != :text && a.type != :file %>
             <%= form_field f, a %>
            </p>
        <% end %>
    <% end %>
    <p>
     <%= f.submit button %>
    </p>
<% end %>
