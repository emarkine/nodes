<form id="upload" enctype="multipart/form-data" action="attachments/upload" method="post">
 <input type="hidden" name="attachment_id" id="attachment_id" value="<%= @obj.attachment.id if @obj.attachment %>"/>
 <table>
  <tr>
   <td valign="top">
    <b>Attachment:</b> <span id="invoice_name"><%= @obj.attachment.name if @obj.attachment %></span>&nbsp;
   </td>
   <td><img id="indicator" src="/images/indicator.gif"  style="display: none;"/>&nbsp;</td>
   <td valign="bottom">
    <input type="file" name="file" class="select" id="upload_file"/>
   </td>
  </tr>
 </table>
</form>
